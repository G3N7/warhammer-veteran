{
  "name": "Warhammer Agents Plugin for BMAD_Method",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:22",
  "features": {
    "ghcr.io/devcontainers-extra/features/claude-code:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.12"
    }
  },
  "mounts": [
    "source=warhammer-veteran-claude-config,target=/home/node/.claude,type=volume"
  ],
  "forwardPorts": [5173],
  "postCreateCommand": "sudo chown -R node:node /home/node/.claude && npm install && pip3 install beautifulsoup4 requests",
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "bradlc.vscode-tailwindcss",
        "ms-vscode.vscode-typescript-next",
        "github.vscode-github-actions",
        "mechatroner.rainbow-csv",
        "ms-azuretools.vscode-containers",
        "Anthropic.claude-code"
      ],
      "settings": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": "explicit"
        },
        "typescript.tsdk": "node_modules/typescript/lib"
      }
    }
  }
}
